{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./lib/esm",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictBindCallApply": true,
    "target": "ES2020",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
